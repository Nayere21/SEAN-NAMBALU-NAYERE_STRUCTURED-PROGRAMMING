#include <stdio.h>
#include <stdlib.h>

int main() {
float num1,num2,result;
char op;


printf("Enter operation (+, -, *, /): ");
scanf("%c", &op);

printf("Enter first number:");
scanf("%f", &num1);


printf("Enter second number:");
scanf("%f", &num2);


switch(op){
case'+':
    result=num1+ num2;
    printf("Result: %.2f + %.2f = %.2f\n", num1, num2, result);
    break;


case'-':
    result=num1- num2;
    printf("Result: %.2f - %.2f = %.2f\n", num1,num2, result);
    break;


case'*':
    result=num1* num2;
    printf("Result: %.2f * %.2f= %.2f\n",num1,num2, result);
    break;


case'/':
    if (num2==0){
        printf("Syntax Error,cannot be divided by zero.\n");
} else {
    result=num1/ num2;
    printf("Result: %.2f / %.2f= %.2f\n", num1, num2, result);

    }
    break;
    }

    return 0;


    }
