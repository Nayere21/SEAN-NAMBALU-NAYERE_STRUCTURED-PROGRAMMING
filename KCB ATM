#include <stdio.h>
#include <stdlib.h>

void menu() {
    printf("\nWELCOME TO KCB ATM\n");
    printf("1. Check account balance\n");
    printf("2. Deposit money\n");
    printf("3. Withdraw money\n");
    printf("4. Exit\n");
}

int main() {
    int USERPIN, choice;
    float amount;
    float balance = 2500;
    int attempts = 0;
    int CorrectPin = 1234;

    while (attempts < 3) {
        printf("Enter your USERPIN: ");
        scanf("%d", &USERPIN);

        if (USERPIN == CorrectPin) {
            printf("Login Successful!\n");
            break;
        } else {
            printf("Login Unsuccessful! Please Try Again\n");
            attempts++;
        }
    }

    if (attempts >= 3) {
        printf("Too many attempts! Contact service provider.\n");
        return 0;
    }

    do {
        menu();
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {

            case 1:
                printf("Your current balance is: Ksh %.2f\n", balance);
                break;

            case 2:
                printf("Enter amount to deposit: ");
                scanf("%f", &amount);

                if (amount > 0) {
                    balance += amount;
                    printf("Amount deposited successfully.\n");
                    printf("New balance: Ksh %.2f\n", balance);
                } else {
                    printf("Invalid deposit amount!\n");
                }
                break;

            case 3:
                printf("Enter amount to withdraw: ");
                scanf("%f", &amount);

                if (amount <= 0) {
                    printf("Invalid withdrawal amount!\n");
                } else if (amount > balance) {
                    printf("Insufficient funds!\n");
                } else {
                    balance -= amount;
                    printf("Ksh %.2f withdrawn successfully.\n", amount);
                    printf("New balance: Ksh %.2f\n", balance);
                }
                break;

            case 4:
                printf("EXIT!\n");
                break;

            default:
                printf("Invalid choice! Please select 1â€“4.\n");
        }

    } while (choice != 4);

    return 0;
}


